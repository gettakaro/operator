{
  "name": "takaro-kubernetes-operator",
  "version": "0.1.0",
  "description": "Kubernetes operator for managing Takaro game server environments",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "start": "node dist/index.js",
    "test": "node --loader tsx --test src/**/*.test.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "kubernetes",
    "operator",
    "takaro",
    "gameserver"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@kubernetes/client-node": "^1.3.0",
    "@matteodisabatino/express-prometheus-middleware": "^6.1.0",
    "@takaro/apiclient": "^0.1.4",
    "ajv": "^8.17.1",
    "dotenv": "^17.0.0",
    "express": "^5.1.0",
    "prom-client": "^15.1.3",
    "winston": "^3.17.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
